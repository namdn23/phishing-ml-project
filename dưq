cd ~/Downloads
unzip chromedriver-linux64.zip


# 1. Di chuyển file chromedriver vào /usr/local/bin/ 
# (Đây là thư mục phổ biến để chứa các file thực thi)
sudo mv chromedriver /usr/local/bin/

# 2. Cấp quyền thực thi
sudo chmod +x /usr/local/bin/chromedriver

# 3. (Tùy chọn) Kiểm tra xem nó có hoạt động không
chromedriver --version


