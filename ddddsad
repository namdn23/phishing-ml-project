# 1. Cài đặt các gói hỗ trợ
sudo apt update && sudo apt install -y curl gnupg

# 2. Thêm Repo của Cloudflare (Dùng bản Bookworm cho Kali mới nhất)
curl -fsSL https://pkg.cloudflareclient.com/pubkey.gpg | sudo gpg --yes --dearmor --output /usr/share/keyrings/cloudflare-warp-archive-keyring.gpg
echo "deb [signed-by=/usr/share/keyrings/cloudflare-warp-archive-keyring.gpg] https://pkg.cloudflareclient.com/ bookworm main" | sudo tee /etc/apt/sources.list.d/cloudflare-client.list

# 3. Cập nhật và cài đặt lại
sudo apt update
sudo apt install cloudflare-warp -y

# 4. Chạy lệnh đăng ký (Lần này sẽ nhận lệnh)
warp-cli registration new
warp-cli connect
